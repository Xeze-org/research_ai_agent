# ── Environment Variables ──
# Used by BOTH docker-compose.yml (prod) AND docker-compose.dev.yml (dev).
# Copy this file to .env and fill in the values.
#
# Repo: https://github.com/Xeze-org/research_ai_agent

# ── Image version (production only) ─────────────────────
VERSION=latest

# ── PostgreSQL ───────────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_pg
POSTGRES_DB=research

# ── MongoDB ──────────────────────────────────────────────
MONGO_INITDB_ROOT_USERNAME=mongoadmin
MONGO_INITDB_ROOT_PASSWORD=changeme_mongo
MONGO_DB=research_agent

# ── Redis ────────────────────────────────────────────────
REDIS_PASSWORD=changeme_redis

# ── MinIO ────────────────────────────────────────────────
MINIO_ACCESS_KEY=changeme_minio_access
MINIO_SECRET_KEY=changeme_minio_secret
MINIO_BUCKET=research-pdfs

# ── Session / Auth ───────────────────────────────────────
SESSION_SECRET=changeme_session_secret

# ── Ports ────────────────────────────────────────────────
FRONTEND_PORT=80
BACKEND_PORT=8080
AI_SERVICE_PORT=8000
LATEX_SERVICE_PORT=8001
